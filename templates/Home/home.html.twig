{% block content %}
<!-- **** Slide et categories box page Home **** -->
<div class="container">
	<!--Start code-->
	<div class="row">
		<div class="col-12 pb-5">
			<section class="row">
				<!--Start slider news-->
				<div class="col-12 col-md-6 pb-0 pb-md-3 pt-2 pr-md-1">
					<div
						id="featured" class="carousel slide carousel" data-ride="carousel">
						<!--dots navigate-->
						<ol class="carousel-indicators top-indicator">
							<li data-target="#featured" data-slide-to="0" class="active"></li>
							<li data-target="#featured" data-slide-to="1"></li>
							<li data-target="#featured" data-slide-to="2"></li>
							<li data-target="#featured" data-slide-to="3"></li>
						</ol>
						<!--carousel inner-->
						<div class="carousel-inner">
							<!--Item slider 1-->
							<div class="carousel-item active">
                            {% include "Home/slide-item.html.twig" with sildes.item1 %}
                        </div>
							<!--Item slider 2-->
							<div class="carousel-item">
                            {% include "Home/slide-item.html.twig" with sildes.item2 %}
							</div>
							<!--Item slider 3-->
							<div class="carousel-item">
                            {% include "Home/slide-item.html.twig" with sildes.item3 %}
							</div>
							<!--Item slider 4-->
							<div class="carousel-item">
                            {% include "Home/slide-item.html.twig" with sildes.item4 %}
							</div>
							<!--end item slider-->
						</div>
						<!--end carousel inner-->
					</div>
					<!--navigation-->
					<a class="carousel-control-prev" href="#featured" role="button" data-slide="prev">
						<span class="carousel-control-prev-icon" aria-hidden="true"></span>
						<span class="sr-only">Previous</span>
					</a>
					<a class="carousel-control-next" href="#featured" role="button" data-slide="next">
						<span class="carousel-control-next-icon" aria-hidden="true"></span>
						<span class="sr-only">Next</span>
					</a>
				</div>
				<!--End slider news-->
				<!--Start box categories-->
				<div class="col-12 col-md-6 pt-2 pl-md-1 mb-3 mb-lg-4">
					<div class="row">
						<!--categorie box 1 -->
						<div class="col-6 pb-1 pt-0 pr-1">
							{% if cates is not empty and cates.0 is not empty %}
                            {% include "Home/new_box.html.twig" with box.box1 %}
							{% endif %}
						</div>
						<!--categorie box 2 -->
						<div class="col-6 pb-1 pl-1 pt-0">
							{% if cates is not empty and cates.1 is not empty %}
                            {% include "Home/new_box.html.twig" with box.box2 %}
							{% endif %}
						</div>
						<!--categorie box 3 -->
						<div class="col-6 pb-1 pr-1 pt-1">
							{% if cates is not empty and cates.2 is not empty %}
                            {% include "Home/new_box.html.twig" with box.box3 %}
							{% endif %}
						</div>
						<!--categorie box 4 -->
						<div class="col-6 pb-1 pl-1 pt-1">
							{% if cates is not empty and cates.3 is not empty %}
                            {% include "Home/new_box.html.twig" with box.box4 %}
							{% endif %}
						</div>
						<!-- Fin des box-->
					</div>
				</div>
				<!--Fin categories news-->
			</section>
			<!--Fin SECTION-->
		</div>
	</div>
</div>
