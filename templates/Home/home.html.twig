{% block comments %}
<!-- Commentaires -->
<section class="container">
{% set view = true %}
{% for post in posts %}	
<div id='slider' {% if view %}class='view'{% else %}class='noview'{% endif %}>
	{% set view = false %}
    <div class="card text-center mt-3">
        <h5 class="card-header">
            {{post.title}}
        </h5>
        <div class="card-body">
            <blockquote class="blockquote">
				{% autoescape false %}
					{{post.comment}}	
				{% endautoescape %}
                <div class="blockquote-footer">
                    De <cite title="Source Title">{{post.user.username}}</cite> le {{post.datecreat|date('d/m/Y')}}
                </div>
            </blockquote>
        </div>
	</div>
</div>
{% endfor %}
<a href='{{path('posts')}}'>Tous les commentaires -></a>
</section>
{% endblock %}

