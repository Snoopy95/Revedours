{% set boxlink = '/products/' ~ id %}

<div class="card border-0 rounded-0 text-white overflow zoom">
  <div class="position-relative">
    <!--thumbnail img-->
    <div class="ratio_right-cover-2 image-wrapper">
      <a href="{{boxlink}}">
        <img class="img-fluid" src="{{asset('images/') ~ image }}" alt="{{titre}}" />
      </a>
    </div>
    <div class="position-absolute p-2 p-lg-3 b-0 w-100 bg-shadow">
      <!-- category -->
      <a class="p-1 badge badge-primary rounded-pill color-btnews" href="{{boxlink}}">{{titre}}</a>
      <!--title-->
      <a href="{{boxlink}}">
        <h2 class="h5 text-white my-1">
          
        </h2>
      </a>
    </div>
  </div>
</div>