{% endblock %}

{% block content %}
	<div class='container'>
		<div class='row'>
			{% for post in posts %}
				<div class="card text-center mt-3 col-md-6">
					<h5 class="card-header">
						{{post.title}}
					</h5>
					<div class="card-body">
						<blockquote class="blockquote">
							{% autoescape false %}
								{{post.comment}}
							{% endautoescape %}
							<div class="blockquote-footer">
								De
								<cite title="Source Title">{{post.user.username}}</cite>
								le
								{{post.datecreat|date('d/m/Y')}}
							</div>
						</blockquote>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
