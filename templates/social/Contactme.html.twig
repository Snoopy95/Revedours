{% extends 'indexhome.html.twig' %}

{% block titlebar %}
<section class="site-pusher">
	<div class="site-content">
		<nav aria-label="breadcrumb">
			<ol class="breadcrumb">
				<li class="breadcrumb-item">
					<a href="{{path('index')}}">Home</a>
				</li>
				<li class="breadcrumb-item active" aria-current="page">Contact</li>
			</ol>
		</nav>
		<div class="card">
			<img src="{{asset('images/plume.jpg')}}" class="card-img img-fluid rounded" alt="plume"/>
			<div class="card-img-overlay text-center styltext">
				<h1 class="card-title tailfonth1">
					Nous contacter
				</h1>
			</div>
		</div>
	</div>
	<div class="site-cache" id="site-cache"></div>
</section>
<!-- DIV du slide bouton burger --></div><!-- DEBUT DU CONTAINT CATALOGUE --><div class="container">
<div class="row mb-2">
	<div class="col-12 text-center pt-3">
		<h2 class="tailfonth1">Posez vos questions</h2>
		<p class="tailfontp">je vous repond au plus vite</p>
	</div>
</div>
</div>
{% endblock %}

{% block content %}
<div class='container'>
	{{ form_start(form) }}
	<div class="row mt-3 justify-content-center">
		<div class="col-md-8">
			{{form_widget(form.name)}}
		</div>
		<div class="col-md-8 mt-2">
			{{form_widget(form.mail)}}
		</div>
		<div class="col-md-8 mt-2">
			{{form_widget(form.objet)}}
		</div>
		<div class="col-md-8 mt-2">
			{{form_widget(form.message)}}
		</div>
		<div class="col-8 mt-3">
			<button type="submit" class="btn btn-success">Valider</button>
		</div>
	</div>
	{{ form_end(form)}}
</div>
{% endblock %}