{% extends "indexadmin.html.twig" %}
{% set navb = 4 %}

{% block titre %}Liste des categories{% endblock %}

{% block content %}
<section>
	<div class="table-responsive-md">
		<table class="table table-striped">
			<thead class="thead-dark">
				<tr>
					<td scope="col">#ID</td>
					<td scope="col">Nom</td>
					<td scope="col">Description</td>
					<td scope="col">Image</td>
				</tr>
			</thead>
			<tbody>
			{% for cate in cates %}
				<tr>
					<td>#{{cate.id}}</td>
					<td>{{cate.cateName}}</td>
					<td>{{cate.cateDescrip}}</td>
					<td><img src="{{asset('/images/' ~ cate.catePicture) }}" width="120" height="40">
						{{cate.catePicture}}
					</td>
				</tr>
				<tr>
					<form action="/admin/updatecate/{{cate.id}}" method="POST" enctype="multipart/form-data">
					<td>
						<button class="btn btn-success" type="submit">Modifier</button>
					</td>
					<td><input class="form-control" type="text" name='name' placeholder="{{cate.cateName}}"></td>
					<td><input class="form-control" type="text" name="descrip" placeholder="{{cate.cateDescrip}}"></td>
					<td>
						<div class="input-group mb-3">
							<div class="custom-file">
								<input class="custom-file-input"
									name="file"
									type="file"
									accept="image/*"
									onchange="nameFileChange(this.files, 'file'+{{cate.id}})">
								<label class="custom-file-label" id="file{{cate.id}}" for="file">Choisir une image</label>
							</div>
						</div>
					</td>
					</form>
				</tr>
			{% endfor %}
			</tbody>
		</table>
	</div>
</section>

{% endblock %}

{% block footer %} 
<div> Page 1 </div>
{% endblock %}
