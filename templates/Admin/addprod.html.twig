{% extends "indexadmin.html.twig" %}
{% set navb = 3 %}

{% block titre %}Ajout de Produit{% endblock %}

{% block content %}
	{{ form_start(form) }}
		<form class="row">
			<div class="col-md-8 mt-2">
				<div class="dropzone" id="myDropzone" action="{{path('upload')}}">
					<input type='hidden' name="picture" id="imag" readonly="true" class='form-control'> 
				</div>	
			</div>
			{{ form_errors(form) }}
			<div class="row mt-3">
				<div class="col-md-5">
					{{form_widget(form.prod_name)}}
				</div>
				<div class="col-md-3">
					<div class="input-group">
						{{form_widget(form.prod_price)}}
					</div>
				</div>
			</div>
			<div class="row mt-2">
				<div class="col-md-8">
					{{form_widget(form.prod_descrip)}}
				</div>
			</div>
			<div class="row mt-2">
				<div class="col-md-3">
					<div class="form-control">
						{{form_widget(form.prod_stock)}}
					</div>
				</div>
				<div class="col-md-5">
					<div class="input-group">
						<span class="input-group-text">Categorie</span>
						{{form_widget(form.categories)}}
					</div>
				</div>
			</div>
			<div class="row mt-2">
				<div class="col-md-8">
					{{form_widget(form.prod_info)}}
				</div>
			</div>
			<div class="row mt-3">
				<div class="col-md-5 mx-lg-auto">
					<button class="btn btn-success" type="submit">VALIDER</button>
					<a href="{{path('listprods')}}" class="btn btn-danger" type="button">ANNULER</a>
				</div>
			</div>
		</form>
	{{ form_end(form) }}
{% endblock %}

{% block footer %} 
<div> Page 1 </div>
{% endblock %}
