{% extends "indexadmin.html.twig" %}
{% set navb = 3 %}

{% block titre %}Ajout de Produit{% endblock %}

{% block content %}
	{{ form_start(form) }}
		<div class="form-group align-items-center">
			<div class="form-row">
				<div class="form-group col-md-8">
					<div class="dropzone" id="myDropzone" action="{{path('upload')}}">
						<input type='hidden' name="picture" id="imag" readonly="true"> 
					</div>
				</div>
			</div>
			{{ form_errors(form) }}
			<div class="form-row">
				<div class="form-group col-md-5">
					{{form_widget(form.prod_name, {'attr': {'placeholder':'Nom'}})}}
				</div>
				<div class="form-group col-md-3">
					<div class="input-group">
						{{form_widget(form.prod_price, {'attr': {'placeholder':'Prix'}})}}
						<div class="input-group-append">
							<span class="input-group-text">€</span>
							<span class="input-group-text">TTC</span>
						</div>
					</div>
				</div>
			</div>
			<div class="form-row">
				<div class="form-group col-md-8">
					{{form_widget(form.prod_descrip, {'attr': {'placeholder':'Description'}})}}
				</div>
			</div>
			<div class="form-row">
				<div class="form-group col-md-3">
					<div class="form-check form-check-inline">
						{{form_widget(form.prod_stock, {'attr': {'class': 'input-group-text'}})}}
					</div>
				</div>
				<div class="form-group col-md-5">
					<div class="input-group">
						<div class="input-group-prepend">
							<span class="input-group-text">Categorie</span>
						</div>
						{{form_widget(form.categories)}}
					</div>
				</div>
			</div>
			<div class="form-row">
				<div class="form-group col-md-8">
					{{form_widget(form.prod_info, {'attr': {'rows': 5, 'placeholder':'Information'}})}}
				</div>
			</div>
			<div class="form-row">
				<div class="form-group col-md-5 mx-auto">
					<button class="btn btn-success" type="submit">VALIDER ✔</button>
					<a href="{{path('listprods')}}" class="btn btn-danger" type="button">ANNULER ❌</a>
				</div>
			</div>
		</div>
	{{ form_end(form) }}
{% endblock %}

{% block footer %} 
<div> Page 1 </div>
{% endblock %}
