    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{path('index')}}">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Inscription</li>
      </ol>
    </nav>
    <div class="card">
      <img src="{{asset('images/inscription.jpg')}}" class="card-img img-fluid taille rounded" alt="theme" />
      <div class="card-img-overlay text-center styltext">
        <h1 class="card-title tailfonth1">
