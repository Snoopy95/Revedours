{% block content %}
<div class="container">

	{{form_start(form)}}
	{{form_row(form.email, {'attr': {'placeholder':'Adresse Email '}})}}
	{{form_row(form.username, {'attr': {'placeholder':'Nom ou Pseudo'}})}}
	{{form_row(form.password, {'attr': {'placeholder':'Votre mot de passe'}})}}
	{{form_row(form.confirm_password, {'attr': {'placeholder':'Confirmez votre mot de passe'}})}}

	<button type="submit" class="btn btn-success">Valider</button>
	
	{{form_end(form)}}

</div>
{% endblock %}
